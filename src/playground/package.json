{
  "name": "askscript-playground",
  "version": "1.0.0",
  "main": "index.js",
  "scripts": {
    "build": "mkdir -p dist/public && npm run build-assets && npm run build-ts && npm run copy-static-assets",
    "build-assets": "npm run build-assets:img",
    "build-assets:img": "imagemin src/public/assets/img/* --out-dir=dist/public/img",
    "build-ts": "tsc",
    "copy-static-assets": "ts-node copyStaticAssets.ts",
    "start": "node dist/app.js",
    "watch-dev": "npm-watch start-dev",
    "start-dev": "node dist/app.js"
  },
  "watch": {
    "start-dev": "dist/public/css/*.css"
  },
  "author": "",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/xFAANG/askql-playground.git"
  },
  "bugs": {
    "url": "https://github.com/xFAANG/askql-playground/issues"
  },
  "homepage": "https://github.com/xFAANG/askql-playground#readme",
  "keywords": [
    "askscript",
    "askql",
    "xfaang"
  ],
  "description": "A frontend for AskScript Playground",
  "dependencies": {
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "express-handlebars": "^4.0.4",
    "handlebars": "^4.7.6",
    "shelljs": "^0.8.4"
  },
  "devDependencies": {
    "@babel/core": "^7.10.2",
    "@babel/polyfill": "^7.10.1",
    "@types/express": "^4.17.6",
    "@types/express-handlebars": "^3.1.0",
    "@types/node": "^14.0.13",
    "@types/shelljs": "^0.8.8",
    "babel-loader": "^8.1.0",
    "cz-conventional-changelog": "^3.2.0",
    "golden-layout": "^1.5.9",
    "imagemin-cli": "^6.0.0",
    "node-sass": "^4.14.1",
    "npm-watch": "^0.6.0",
    "ts-node": "^8.10.2",
    "typescript": "^3.9.5",
    "webpack": "^4.43.0",
    "webpack-cli": "^3.3.11"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  }
}
