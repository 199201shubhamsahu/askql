{
  "compileOnSave": true,
  "compilerOptions": {
    "inlineSourceMap": true,
    "jsx": "react",
    "jsxFactory": "askjsx.createElement",
    "module": "commonjs",
    "outDir": "dist",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "strict": true,
    "target": "es2016"
  },
  "include": ["./src/**.ts", "./src/**/*.ts", "@types/interface.d.ts"],
  "exclude": ["**/drafts/**", "**/node_modules/**"]
}
