{
  "compileOnSave": true,
  "compilerOptions": {
    "jsx": "react",
    "jsxFactory": "askjsx.createElement",
    "module": "commonjs",
    "outDir": "dist",
    "esModuleInterop": true,
    "sourceMap": true,
    "declaration": true,
    "resolveJsonModule": true,
    "strict": true,
    "target": "es2016"
  },
  "include": [
    "./src/**.ts",
    "./src/**/*.ts",
    "./src/package.json",
    "@types/interface.d.ts"
  ],
  "exclude": ["**/drafts/**", "**/node_modules/**"]
}
